echo -e $HOSTNAME | figlet | lolcat
echo -e $HOSTNAME | toilet | lolcat
echo -e $HOSTNAME | boxes -d parchment | lolcat
ls ~/Pictures/*.jp?g | shuf -n 1 | xargs -d '\n' jp2a --width=80 --colors

