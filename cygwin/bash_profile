#==============================================================================
# PATH=$HOME/Library/Python/3.8/bin:$PATH
# PATH=$HOME/Library/Python/3.9/bin:$PATH
# PATH=$HOME/Library/Python/3.10/bin:$PATH

PATH=/opt/local/bin:$PATH

export PATH

